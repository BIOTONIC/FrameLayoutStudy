<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context="com.lovejoy.layouttest.MainActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/metal"
            android:id="@+id/imageMedal"
            android:scaleType="fitStart"
            android:layout_marginTop="120dp"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/pilot"
            android:id="@+id/imagePilot"
            android:layout_alignParentEnd="true"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/saika"
            android:id="@+id/imageSaika"
            android:layout_alignParentEnd="true"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frameLayout">

    </FrameLayout>


</RelativeLayout>
